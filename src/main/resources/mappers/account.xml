<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTO Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.ikmyeongshopteam4.repository.AccountRepository">
    <resultMap id="role" type="com.study.ikmyeongshopteam4.domain.Role">
        <result property="id" column="id"/>
        <result property="name" column="role_name"/>
        <result property="create_date" column="create_date"/>
        <result property="update_date" column="update_date"/>
    </resultMap>

    <resultMap id="user" type="com.study.ikmyeongshopteam4.domain.User">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="passwordChk" column="passwordChk"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="postcode" column="postcode"/>
        <result property="address" column="address"/>
        <result property="addresssub" column="addresssub"/>
        <result property="provider" column="provider"/>
        <result property="role_id" column="role_id"/>
        <result property="create_date" column="create_date"/>
        <result property="update_date" column="update_date"/>
        <collection property="role" resultMap="role"/>
    </resultMap>

    <select id="findUserByUsername" parameterType="String" resultMap="user">
        select
            um.id,
            um.username,
            um.password,
            um.passwordChk,
            um.name,
            um.email,
            um.phone,
            um.postcode,
            um.address,
            um.addresssub,
            um.provider,
            um.role_id,
            rm.name as role_name,
            um.create_date,
            um.update_date
        from
            user_mst um
            left outer join role_mst rm on(rm.id = um.role_id)
        where
        um.username = #{username}

    </select>

    <insert id="saveUser" parameterType="com.study.ikmyeongshopteam4.domain.User">
        insert into
        user_mst
        values(
        0,
        #{username},
        #{password},
        #{passwordChk},
        #{name},
        #{email},
        #{phone},
        #{postcode},
        #{address},
        #{addresssub},
        #{provider},
        #{role_id},
        now(),
        now()
        )
    </insert>

</mapper>